    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "knex": "^0.16.3",
    "morgan": "^1.9.1",
    "pg": "^7.8.0",
    "postgrator": "^4.0.0",
    "postgrator-cli": "^3.1.0",
    "valid-url": "^1.0.9",
    "winston": "^3.2.1",
    "xss": "^1.0.3"
  },
  "devDependencies": {
